<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
    <form class="form new-important-post-form">
      <div class="form-group">
        <p style="display: none" id="user_id">{{id}}</p>
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="contents">Contents:</label>
        <input class="form-input" id="contents" name="contents"></input>
      </div>
      <div class="form-group">
        <button type="submit" value='Submit' class="btn btn-primary" id="createBtn">Create</button>
      </div>
    </form>
  </div>

{{!-- All post created by user  --}}
{{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Post:</h3>

    {{#each posts as |post|}}

    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{../username}}</a></h4>
      </div>
      <div class="col-md-8">
      <h4><a href="/post/{{post.id}}">{{post.date_created}}</a></h4>
      </div>
       <div class="form-group">
        <label for="contents">Contents:</label>
        <input class="form-input" id="contents" name="contents"></input>
         <p class="form-input">{{post.contents}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{!-- Comment Post Section --}}
<div class="row mb-2">
      <div class="col-md-8">
        <h3><a href="/post/{{post.id}}"><u>Comments by {{username}}</u></a></h3>
